<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.HomeFragment"
    >

    <!-- Slider Layout -->

    <!-- RecyclerView -->

    <RelativeLayout
        android:id="@+id/slider_container"
        android:layout_width="421dp"
        android:layout_height="214dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/slider"
        android:elevation="8dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Search Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtSearch"
            android:layout_width="314dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="23dp"
            android:background="#F4ECEC"
            android:inputType="text"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="41dp"
            android:layout_height="39dp"
            android:layout_alignStart="@+id/txtSearch"
            android:layout_alignTop="@+id/txtSearch"
            android:layout_alignEnd="@+id/txtSearch"
            android:layout_alignBottom="@+id/txtSearch"
            android:layout_marginStart="275dp"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="-1dp"
            android:src="@drawable/ic_search" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameShopping"
        android:layout_width="414dp"
        android:layout_height="545dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slider_container">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_products"
            android:layout_width="418dp"
            android:layout_height="491dp"
            android:backgroundTint="@color/white"
            android:padding="4dp"
            android:scrollbars="vertical" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>